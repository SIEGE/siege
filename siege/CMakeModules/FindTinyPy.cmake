FIND_PATH(TINYPY_INCLUDE_DIR tinypy.h)

FIND_LIBRARY(TINYPY_LIBRARY NAMES tinypy)
IF(NOT TINYPY_LIBRARY)
    MESSAGE(SEND_ERROR "TinyPy not found")
ENDIF(NOT TINYPY_LIBRARY)

IF(TINYPY_INCLUDE_DIR AND TINYPY_LIBRARY)
   SET(TINYPY_FOUND TRUE)
ENDIF(TINYPY_INCLUDE_DIR AND TINYPY_LIBRARY)

IF(TINYPY_FOUND)
   IF (NOT TinyPy_FIND_QUIETLY)
      MESSAGE(STATUS "Found TinyPy: ${TINYPY_LIBRARY}")
   ENDIF (NOT TinyPy_FIND_QUIETLY)
ELSE(TINYPY_FOUND)
   IF (TinyPy_FIND_REQUIRED)
      MESSAGE(FATAL_ERROR "Could not find TinyPy")
   ENDIF (TinyPy_FIND_REQUIRED)
ENDIF(TINYPY_FOUND)
